<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="rectangle" class="practice.spring.core.shapes.Rectangle">
		<property name="listPoints">
			<list value-type="practice.spring.core.shapes.utilities.Point">
				<ref bean="pointA"/>
				<ref bean="pointA"/>
				<ref bean="pointC"/>
				<ref bean="pointD"/>
			</list>
		</property>
		<property name="setPoints">
			<set value-type="practice.spring.core.shapes.utilities.Point">
				<ref bean="pointA"/>
				<ref bean="pointA"/>
				<ref bean="pointC"/>
				<ref bean="pointD"/>
			</set>
		</property>
	</bean>
	<bean id="pointA" class="practice.spring.core.shapes.utilities.Point">
		<property name="x" value="2" />
		<property name="y" value="4" />
	</bean>
	<bean id="pointB" class="practice.spring.core.shapes.utilities.Point">
		<property name="x" value="2" />
		<property name="y" value="10" />
	</bean>
	<bean id="pointC" class="practice.spring.core.shapes.utilities.Point">
		<property name="x" value="6" />
		<property name="y" value="10" />
	</bean>
	<bean id="pointD" class="practice.spring.core.shapes.utilities.Point">
		<property name="x" value="6" />
		<property name="y" value="4" />
	</bean>
</beans>
